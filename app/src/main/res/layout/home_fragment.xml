<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/home_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10sp"
            android:text="Transactions" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:weightSum="4">

            <RelativeLayout
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/home_menu_sales"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/menuitembg"
                    android:src="@drawable/ic_baseline_sales_white"
                    android:text="@string/str_btnSaleslist"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_menu_sales"
                    android:fontFamily="@font/droid_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_sales"
                    android:textAlignment="center"
                    android:textAllCaps="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/home_menu_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/menuitembg"
                    android:src="@drawable/ic_baseline_dc_white"
                    android:text="@string/str_btnDelivery"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_menu_delivery"
                    android:fontFamily="@font/droid_bold"
                    android:gravity="center_horizontal"
                    android:text="Delivery"
                    android:textAlignment="center"
                    android:textAllCaps="true" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0sp"
            android:layout_marginTop="0sp"
            android:layout_marginRight="0sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_menu_salesoutstanding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menuitembg"
                android:text="Statement"
                android:layout_gravity="bottom"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>