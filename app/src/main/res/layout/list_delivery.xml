<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_layout_delivery_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/listitembg"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/list_layout_delivery"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/txt_dc_sno"
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/droid"
            android:gravity="start|center_vertical"
            android:text="1"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/txt_issueno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/droid"
                android:text="INV : S191"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle=""
                android:textSize="17sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_partyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_issueno"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/droid_bold"
                android:text="SRS Customers"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_issuedate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/droid"
            android:gravity="start|center_vertical"
            android:text="27-07-2022"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>