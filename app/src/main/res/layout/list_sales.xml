<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_nursery_product"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:weightSum="3">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="2">
    <TextView
        android:id="@+id/txt_invoiceno"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/green_dark"
        android:textStyle=""
        android:layout_marginLeft="5dp"
        android:text="INV : S191"
        android:visibility="visible" />
    <TextView
        android:id="@+id/txt_customername"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:layout_below="@id/txt_invoiceno"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:text="SRS Customers"
        android:visibility="visible" />

</RelativeLayout>


    <TextView
        android:id="@+id/txt_invoicedate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:gravity="start|center_vertical"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:text="27-07-2022"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_totalamount"
        android:layout_width="100dp"
        android:layout_gravity="end"
        android:textAlignment="textEnd"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="240000000"
        android:visibility="visible" />

</LinearLayout>