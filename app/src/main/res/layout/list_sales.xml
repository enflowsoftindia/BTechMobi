<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_layout_sales_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/listitembg"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/list_layout_sales"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/txt_sales_sno"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/droid"
            android:gravity="start|center_vertical"
            android:text="1"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">


            <TextView
                android:id="@+id/txt_invoiceno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/droid_italic"
                android:text="INV : S191"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_customername"
                android:layout_width="250sp"
                android:layout_height="fill_parent"
                android:layout_below="@id/txt_invoiceno"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/droid_bolditalic"
                android:lines="4"
                android:maxLines="4"
                android:text="d do sdasa adsfsdf sdf sdfs sdf sdfsdf sdfsdf sdfsd sdfsdf sdfsdf sdf sdfsd sdfsdfasdr in"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle=""
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/txt_invoicedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/droid_italic"
                android:gravity="end|center_vertical"
                android:text="27-07-2022"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="11dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_totalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_invoicedate"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="@font/droid_bolditalic"
                android:gravity="end|bottom"
                android:text="240000000"
                android:textAlignment="textEnd"
                android:textColor="#921AA6"
                android:visibility="visible"
                android:textSize="13dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>