<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BTechMobi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/titleblue</item>
        <item name="colorPrimaryVariant">@color/titleblue</item>
        <item name="colorOnPrimary">@color/titleblue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/titleblue</item>
        <item name="colorSecondaryVariant">@color/titleblue</item>
        <item name="colorOnSecondary">@color/titleblue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BTechMobi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BTechMobi.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.BTechMobi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="borderWidth">1px</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
<style name="timepicker_style">
    <item name="android:textSize">15dp</item>
</style>
</resources>

